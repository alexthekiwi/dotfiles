ssh-care01() {
    if [[ -z "$1" ]]; then
        echo "Usage: ssh-care01 <username>"
        return 1
    fi
    ssh "$1@223.165.64.179"
}

sftp-care01() {
    if [[ -z "$1" ]]; then
        echo "Usage: sftp-care01 <username>"
        return 1
    fi
    sftp "$1@223.165.64.179"
}

ssh-squid() {
    if [[ -z "$1" ]]; then
        echo "Usage: ssh-squid <username>"
        return 1
    fi
