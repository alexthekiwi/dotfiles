#!/usr/bin/env bash

HISTORY_FILE="$HOME/.local/share/tmux-sessionizer-history"
touch "$HISTORY_FILE"

if [[ $# -eq 1 ]]; then
    selected=$1
else
    all_dirs=$(find ~/Code -mindepth 1 -maxdepth 1 -type d | sort)
    # Dirs ordered by most recently sessionized (most recent last)
    ranked=$(tac "$HISTORY_FILE" | awk '!seen[$0]++')
    # Unranked dirs go at the top
    unranked=$(comm -23 <(echo "$all_dirs") <(echo "$ranked" | sort))
    selected=$(printf '%s\n%s' "$unranked" "$(echo "$ranked" | tac)" | grep -v '^$' | fzf --tac)
fi

if [[ -z $selected ]]; then
    exit 0
fi

# Log this selection
echo "$selected" >> "$HISTORY_FILE"

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t="$selected_name" 2> /dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected" -n nvim
    tmux send-keys -t "$selected_name:nvim" "nvim" Enter
    tmux new-window -t "$selected_name" -n claude -c "$selected"
    tmux split-window -t "$selected_name:claude" -h -c "$selected"
    tmux new-window -t "$selected_name" -n servers -c "$selected"
    tmux select-window -t "$selected_name:nvim"
fi

tmux switch-client -t "$selected_name"
