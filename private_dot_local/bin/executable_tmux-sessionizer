#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    # Zoxide-ranked dirs first (most used at bottom), then any unvisited dirs
    all_dirs=$(find ~/Code -mindepth 1 -maxdepth 1 -type d | sort)
    ranked=$(zoxide query --list 2>/dev/null | grep "^$HOME/Code/[^/]*$")
    unranked=$(comm -23 <(echo "$all_dirs") <(echo "$ranked" | sort))
    selected=$(printf '%s\n%s' "$unranked" "$ranked" | grep -v '^$' | fzf --tac)
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)

if ! tmux has-session -t="$selected_name" 2> /dev/null; then
    tmux new-session -ds "$selected_name" -c "$selected" -n nvim
    tmux send-keys -t "$selected_name:nvim" "nvim" Enter
    tmux new-window -t "$selected_name" -n claude -c "$selected"
    tmux split-window -t "$selected_name:claude" -h -c "$selected"
    tmux new-window -t "$selected_name" -n servers -c "$selected"
    tmux select-window -t "$selected_name:nvim"
fi

tmux switch-client -t "$selected_name"
